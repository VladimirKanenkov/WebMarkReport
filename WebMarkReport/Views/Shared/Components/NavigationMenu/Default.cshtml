@model IEnumerable<string>

@foreach (string category in Model)
{
    <a class="btn btn-block
       @(category == ViewBag.SelectedCategory ? "btn-primary": "btn-secondary")"
       asp-action="Index"
       asp-controller="Home"
       asp-route-buildingId="2"
       asp-route-sectionId="4">
        @(category.Substring(0, category.IndexOf("::")))
        <br>
        @(category.Substring(category.IndexOf("::")+2))    
    </a>
}
